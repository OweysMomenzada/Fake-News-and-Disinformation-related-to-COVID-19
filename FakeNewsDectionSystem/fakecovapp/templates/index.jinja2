<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- customised style -->
    <link rel="stylesheet" href="../static/css/index.css">

    <title>FakeCovApp</title>
</head>
<body>
<h1 class="headline">Welcome to our Covid19 Fake News Detection App</h1>
<div class="main-container">
    <div class="input-container">
        <div class="card">
            <div class="card-header">
                <span class="headline">Choose your Input</span>
            </div>
            <div class="card-body">
                <h5>Get Tweets from Twitter</h5>
                <form id="twitterFetchForm" action="" method="post">
                    <div class="form-group">
                        <label for="searchString">Search in Tweets for:</label>
                        <input type="text" name="searchString" id="searchString" class="form-control" placeholder="Covid19">
                    </div>
                    <div class="form-group">
                        <label for="sinceDate">Starting Date (yyyy-mm--dd):</label>
                        <input type="text" name="sinceDate" id="sinceDate" class="form-control" placeholder="2020-03-16">
                    </div>
                    <div class="form-group">
                        <label for="tweetAmount">Starting Date (yyyy-mm--dd):</label>
                        <input type="number" name="tweetAmount" id="tweetAmount" class="form-control" placeholder="5">
                    </div>
                    <button type="submit" name="submitBtn" id="fetch-tweet-button" class="btn btn-sub" value="fetch-tweet">
                        Fetch
                    </button>
                </form>
                <h5>Write your own Tweet</h5>
                <form id="predictText" action="" method="post">
                    <div class="form-group">
                        <label for="ownText">Your Tweet</label>
                        <input type="text" name="ownText" id="ownText" class="form-control" placeholder="Bill Gates vaccines micro chips">
                    </div>
                    <button type="submit" name="submitBtn" id="predict-text-button" class="btn btn-sub" value="predict-text">
                        Predict
                    </button>
                </form>
            </div>
        </div>
    </div>
    {% if show_table == true %}
    <div class="result-container">
        {% if predict_tweet_btn == true %}
            <form id="predictTweetBtn" action="" method="post">
                <button type="submit" name="submitBtn" id="predict-tweet-button" class="btn btn-sub" value="predict-tweet">
                    Predict Tweets
                </button>
            </form>
        {% endif %}
        <table class="fixed-header table-striped">
            <thead id="resultTableHead">
                <tr>
                    {% for column in table_columns %}
                        <th>{{ column }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody id="resultTableBody">
                {% for row in table_data %}
                    <tr id="{{row[0]}}rowIdx">
                        {% for col in row %}
                            <td>{{ col }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
</div>
<script src="../static/javascript/index.js"></script>
</body>
</html>